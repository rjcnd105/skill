	script(type='text/javascript').

		// 해당 메뉴 컨텐츠 show, hide
		$(document).ready(function(){

			//- $('.insert_mobile').html($('table').find('.show_mobile').parent().parent().clone());
			//- 기존의 코딩리스트 항목중에 특정 항목들을 분류해서 새로운 카테고리에 나타날때 쓰임.
			//- 위 소스는 클래스를 찾아서 분류함
			//- ().html(); 은 특정 부분에 삽입 하는 소스 이고, 이때 clone() 해줘야 기존 소스는 남겨두고 복사함.

			//- $('.insert_mobile').html($('table').filter(':contains(pop_)').parent().clone());
			//- 기존의 코딩리스트 항목중에 특정 항목들을 분류해서 새로운 카테고리에 나타날때 쓰임.
			//- 위 소스는 pop_ 이라는 단어를 필터링 해서 분류함
			//- ().html(); 은 특정 부분에 삽입 하는 소스 이고, 이때 clone() 해줘야 기존 소스는 남겨두고 복사함.

			for(i = 0;i <= $('.coding_list').length;i++){
				tableRowSpanning($('table#table' + i), 3);
				tableRowSpanning($('table#table' + i), 2);
				tableRowSpanning($('table#table' + i), 1);
				tableRowSpanning($('table#table' + i), 0);
			};
			$(".gnb a").click(function(e){
				e.preventDefault();
				var currentId = $(this).index();
				//alert(currentId );
				$(".effect").hide();
				$("#effect"+currentId+"").fadeIn("fast");
			});
		});


		// 테이블 그리기
		function tableRowSpanning(Table, spanning_row_index)
		{
		var RowspanTd = false;
		var RowspanText = false;
		var RowspanCount = 0;
		var Rows = $('tbody tr', Table);
		$.each(Rows, function() {
		var This = $('td', this)[spanning_row_index];
		var text = $(This).text();
		if(RowspanTd == false)
		{
		RowspanTd = This;
		RowspanText = text;
		RowspanCount = 1;
		}
		else if(RowspanText != text)
		{
		$(RowspanTd)
		.attr('rowSpan', RowspanCount);
		RowspanTd = This;
		RowspanText = text;
		RowspanCount = 1;
		}
		else
		{
		$(This)
		.remove();
		RowspanCount++;
		}
		});
		// 반복 종료 후 마지막 rowspan 적용
		$(RowspanTd)
		.attr('rowSpan', RowspanCount);
		}



