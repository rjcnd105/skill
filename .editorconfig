[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=false
indent_style=space
indent_size=4

[{*.ng,*.sht,*.html,*.shtm,*.shtml,*.htm}]
indent_style=tab
tab_width=2

[{.eslintrc,.babelrc,.stylelintrc,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[{concat,*.applejs,*.js}]
indent_style=tab
tab_width=4

[*.less]
indent_style=space
indent_size=2

[{*.pug,*.jade}]
indent_style=tab
tab_width=4

[*.coffee]
indent_style=space
indent_size=2

