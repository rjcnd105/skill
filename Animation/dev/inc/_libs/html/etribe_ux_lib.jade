//- viewport
mixin viewport_mobile
	meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no')
	//- 모바일 웹사이트 만들때 넣어줌.

mixin viewport_pc
	meta(name='viewport', content='width=device-width, initial-scale=1')
	//- PC 버전을 스마트폰이나 태블릿 디바이스로 보려고 할때 사용. (웹사이트 상황에 따라 수정이 필요 할 수도 있음.)

//- css link
mixin css_link(href)
	link(href="#{currentUrl}" + href, type='text/css', rel='stylesheet')

//- javascript link
mixin js_link(src)
	script(src="#{currentUrl}" + src, type='text/javascript', charset='utf-8')

//- images URL
mixin img_src(src, alt, width, height)
	img(src="#{currentUrl}" + src, alt=alt, width=width, height=height)

//- IE 조건부 주석 처리
mixin ie(condition)
	| <!--[!{condition}]>
	block
	| <![endif]-->

